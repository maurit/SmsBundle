{
    "name": "maurit/sms-bundle",
    "type": "symfony-bundle",
    "description": "Sms sending system with different providers",
    "keywords": [
        "Sms", "eurosms.com", "sms-brana.sk", "smsgate.sk", "sms.ru", "smsaero.ru", "iqsms.ru", "smsc.ru", "messagebird.com"
    ],
    "license": "MIT",
    "homepage": "https://github.com/Maurit/SmsBundle",
    "authors": [
        {
            "name": "Yamilov Stepan",
            "email": "yamilovs@gmail.com"
        },
        {
            "name": "MAURIT s.r.o",
            "email": "maurit@maurit.sk",
            "homepage": "https://www.maurit.sk"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-intl": "*",
        "ext-json": "*",
        "symfony/framework-bundle": "^7.2",
        "guzzlehttp/guzzle": "^7.5",
        "nette/utils": "^3.2",
        "giggsey/libphonenumber-for-php": "^8.12"
    },
    "require-dev": {
        "symfony/console": "^7.2",
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.1",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "spaze/phpstan-disallowed-calls": "^4.5",
        "phpstan/phpstan-symfony": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Maurit\\Bundle\\SmsBundle\\": "src/"
        },
        "exclude-from-classmap": [
            "src/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Maurit\\Bundle\\SmsBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
